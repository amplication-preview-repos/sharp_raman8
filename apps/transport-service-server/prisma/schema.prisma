datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vehicle {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Driver {
  bookings   Booking? @relation(fields: [bookingsId], references: [id])
  bookingsId String?  @unique
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  updatedAt  DateTime @updatedAt
}

model Route {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Customer {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Booking {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  ID        Driver?
  updatedAt DateTime @updatedAt
}
